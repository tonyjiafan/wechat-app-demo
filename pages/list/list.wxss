/**
 * 产品列表
 */
.product-list {
  padding: 20rpx;
  padding-bottom: 4rpx;
  display: flex;
  flex-wrap: wrap;
}
.product-item {
  width: 49%;
  padding: 12rpx 16rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 4px;
  margin-bottom: 16rpx;
  color: #666;
}
.product-item:nth-child(odd) {
  margin-right: 1%;
}
.product-item:nth-child(even) {
  margin-left: 1%;
}
.product-item .image {
  width: 100%;
  height: 200rpx;
}
.product-item .title {
  color: #333;
}
.product-item .title,
.product-item .desc {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
