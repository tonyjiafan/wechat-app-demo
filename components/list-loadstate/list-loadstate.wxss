/**
 * 加载状态
 * @type {[type]}
 */
.load-state {
  font-size: 12px;
  color: #999;
  text-align: center;
  /**
     * 可点击按钮
     */
}
.load-state .btn {
  border: 1px solid #999;
  border-radius: 36rpx;
  padding: 2px 4px;
  /**
         * 高亮样式
         */
}
.load-state .btn.highlight {
  color: #2b7ae2;
  border-color: #2b7ae2;
}
/**
 * 全屏状态
 */
.load-state.full {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /**
     * 说明pulldown下拉样式已显示
     * @type {[type]}
     */
  /**
     * loading section
     */
  /**
     * error section
     */
}
.load-state.full .loading .image {
  display: block;
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 4px;
  margin-left: auto;
  margin-right: auto;
}
.load-state.full .error {
  padding: 20rpx;
}
/**
 * 列表尾部追加状态
 */
.load-state.append {
  padding: 20rpx 10rpx;
}
